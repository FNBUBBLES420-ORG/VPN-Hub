{
  "security_policies": {
    "input_validation": {
      "username_max_length": 100,
      "password_max_length": 200,
      "server_name_max_length": 50,
      "command_timeout_seconds": 30,
      "injection_patterns": [
        ";", "&", "|", "$", "`", "$(", "${", "<", ">", "&&", "||",
        "\n", "\r", "\t", "\\", "../", "..\\", "<script", "</script",
        "javascript:", "data:", "file:", "ftp:"
      ]
    },
    "authentication": {
      "max_failed_attempts": 5,
      "lockout_duration_minutes": 15,
      "session_timeout_minutes": 60,
      "require_secure_passwords": true,
      "enable_2fa": true,
      "password_encryption": "AES-256-GCM"
    },
    "network_security": {
      "enforce_https": true,
      "certificate_pinning": true,
      "tls_minimum_version": "1.2",
      "allowed_cipher_suites": [
        "ECDHE-RSA-AES256-GCM-SHA384",
        "ECDHE-RSA-AES128-GCM-SHA256"
      ],
      "dns_over_https": true,
      "dns_servers": [
        "1.1.1.1",
        "1.0.0.1",
        "8.8.8.8",
        "8.8.4.4"
      ]
    },
    "privilege_management": {
      "run_minimal_privileges": true,
      "uac_prompt_for_elevation": true,
      "max_escalation_attempts": 3,
      "escalation_cooldown_minutes": 5,
      "log_privilege_changes": true
    },
    "monitoring": {
      "log_security_events": true,
      "anomaly_detection": true,
      "failed_auth_threshold": 5,
      "command_frequency_threshold": 10,
      "network_request_threshold": 100,
      "log_retention_days": 90
    },
    "file_integrity": {
      "enable_code_signing": true,
      "signature_algorithm": "RSA-4096",
      "verify_on_startup": true,
      "monitor_file_changes": true,
      "quarantine_modified_files": true
    }
  },
  "threat_detection": {
    "brute_force_protection": {
      "enabled": true,
      "max_attempts": 5,
      "time_window_minutes": 15,
      "block_duration_minutes": 30
    },
    "anomaly_detection": {
      "enabled": true,
      "sensitivity_level": "medium",
      "adaptive_thresholds": true,
      "ml_detection": false
    },
    "command_injection": {
      "enabled": true,
      "pattern_matching": true,
      "whitelist_enforcement": true,
      "sandbox_execution": true
    }
  },
  "incident_response": {
    "auto_block_threats": true,
    "alert_administrators": true,
    "log_incidents": true,
    "quarantine_suspicious_files": true,
    "emergency_shutdown": false
  }
}